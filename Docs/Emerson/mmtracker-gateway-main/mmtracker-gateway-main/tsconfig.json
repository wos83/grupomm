{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es5"
  },
  "exclude": ["node_modules", "build", "commitlint.config.js"]
}
